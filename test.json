							"     },",
							"    \"pageCount\":{",
							"         \"type\": \"number\"",
							"     },",
							"    \"excerpt\":{",
							"         \"type\": \"string\"",
							"     },",
							"    \"publishDate\":{",
							"         \"type\": \"string\"",
							"     },",
							"    \"required\": [\"id\", \"title\", \"description\", \"pageCount\", \"excerpt\", \"publishDate\"]",
							"};",
							"",
							"pm.test(\"Validating if the body response isn't null - v1\", function () {",
							"    var response = pm.response.json();",
							"    pm.expect(tv4.validate(response, schema)).to.be.true;",
							"    pm.expect(tv4.validate(response.id, {\"type\": \"number\"})).to.be.true;",
							"});",
