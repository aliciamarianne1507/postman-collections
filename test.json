							"    pm.expect(response.publishDate).not.eql(null);",
							"});",
							"",
							"pm.test(\"Type of content of pageCount\", function () {",
							"    var response = pm.response.json().pageCount;",
							"    pm.expect(Number.isInteger(response)).to.be.true;",
							"});",
							"",
